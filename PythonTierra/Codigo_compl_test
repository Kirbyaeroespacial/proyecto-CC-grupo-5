import serial
from tkinter import *
from tkinter import font
import matplotlib.pyplot as plt
from collections import deque
import time
import threading

#Setup del serial
device = 'COM7'
usbSerial = serial.Serial(device, 9600, timeout=1)

#INICIO PROGRAMA GRÁFICA
def grafica():
    import serial
    #Inicio parámetros, definiciones y configuraciones iniciales.
    #parámetres inicials??
    #inicio inicialización Serial

    max_points = 100  # Puntos máximos visibles.
    temps = deque([0]*max_points, maxlen=max_points)
    hums = deque([0]*max_points, maxlen=max_points)

    latest_data = {"temp": 0, "hum": 0}  # variable compartida

    #Definimos la función read_serial que se encargara de leer los datos:
    def read_serial():
        while True:
            linea = usbSerial.readline().decode('utf-8').strip()
            if ":" in linea:
                ht = linea.split(":")
                try:
                    temp = float(ht[1]) / 100
                    hum = float(ht[0]) / 100
                    latest_data["temp"] = temp
                    latest_data["hum"] = hum
                    print(f"Serial: {temp:.2f} °C, {hum:.2f} %")
                except (ValueError, IndexError):
                    # Ignora linees invalides.
                    pass
            time.sleep(0.01)  

    #Inicar un proceso de segundo plano
    threading.Thread(target=read_serial, daemon=True).start()

    #Inicio config. grafica
    plt.ion()
    fig, ax = plt.subplots()
    line_temp, = ax.plot(range(max_points), temps, label='Temperature')
    line_hum, = ax.plot(range(max_points), hums, label='Humidity')
    ax.set_ylim(0, 100)  # adjust to your data range
    ax.set_xlabel('Samples')
    ax.set_ylabel('Value')
    ax.legend()
    plt.title("Temperatura i Humitat")
    xdata = []
    ydata = []
    line, = ax.plot([], [], lw=2)
    #Fin de configuración de la gráfica

    #Fin parámetros, definiciones y configuraciones iniciales.


    #Loop de actualización de la gráfica:
    while True:
        if not plt.fignum_exists(fig.number):
            break

        temps.append(latest_data["temp"])
        hums.append(latest_data["hum"])

        line_temp.set_ydata(temps)
        line_hum.set_ydata(hums)
        line_temp.set_xdata(range(len(temps)))
        line_hum.set_xdata(range(len(hums)))

        ax.relim()
        ax.autoscale_view()

        plt.draw()
        plt.pause(0.05)
#Fin loop de actualización de la gráfica
#FIN CODIGO GRÁFICA

#Inicio grafica en otro thread
threading.Thread(target=grafica, daemon=True).start()
#Fin inicio gráfica en otro thread

#Acciones de los botones
def iniClick():
    mensaje = 'i\n'
    usbSerial.write(mensaje.encode('utf-8'))


def stopClick():
    mensaje = 'p\n'
    usbSerial.write(mensaje.encode('utf-8'))

def reanClick():
    mensaje = 'r\n'
    usbSerial.write(mensaje.encode('utf-8'))

#Ventana principal
window = Tk()
window.title("Control Satélite")
window.geometry("850x300")
window.configure(bg="#1e1e2f")  # Fondo oscuro
window.resizable(False, False)

#Fuente
title_font = font.Font(family="Inter", size=22, weight="bold")
button_font = font.Font(family="Inter", size=14, weight="bold")

#Tñitulo
tituloLabel = Label(
    window, text="Control Satélite", font=title_font, 
    bg="#1e1e2f", fg="#ffffff"
)
tituloLabel.pack(pady=(30, 40))

#Frames
btn_frame = Frame(window, bg="#1e1e2f")
btn_frame.pack(pady=10)

#Estilos
def create_btn(master, text, command):
    return Button(
        master, text=text, command=command,
        font=button_font, bg="#4b6cb7", fg="white",
        activebackground="#6b8dd6", activeforeground="white",
        bd=0, relief=RIDGE, padx=20, pady=15, width=18
    )

#Botones
IniButton = create_btn(btn_frame, "Iniciar transmisión", iniClick)
stopButton = create_btn(btn_frame, "Parar transmisión", stopClick)
reanButton = create_btn(btn_frame, "Reanudar", reanClick)

#Distribuir botones de manera uniforma
IniButton.grid(row=0, column=0, padx=10)
stopButton.grid(row=0, column=1, padx=10)
reanButton.grid(row=0, column=2, padx=10)

#Ejecutar interfaz
window.mainloop()
